#!/usr/bin/env bash
# -*- sh -*-

# Fail fast and fail hard.
set -eo pipefail

# for DEBUG; remove me.
set -x

# Paths.
BIN_DIR=$(cd $(dirname $0); pwd) # absolute path
ROOT_DIR=$(dirname $BIN_DIR)
BUILD_DIR=$1
CACHE_DIR=$2

source $BIN_DIR/utils

# ActivePython isn't installed yet.
if [ ! -e /opt/ActivePython-2.7 ]; then
    puts-step "Installing ActivePython 2.7.5.6"
    rm -rf $CACHE_DIR/x
    mkdir -p $CACHE_DIR/x
    cd $CACHE_DIR/x
    tar zxf $ROOT_DIR/ActivePython*gz
    cd Acti*
    ./install.sh -I $BUILD_DIR/opt/ActivePython-2.7 | indent

    APYBIN=$BUILD_DIR/opt/ActivePython-2.7/bin
else
    APYBIN=/opt/ActivePython-2.7/bin
fi

VENV=$BUILD_DIR/venv

export PATH=$APYBIN:$PATH

puts-step "Creating virtualenv"
virtualenv --extra-search-dir=$ROOT_DIR/virtualenv_support $VENV | indent

if [ -f $BUILD_DIR/requirements.txt ]; then
    puts-step "Installing requirements via pip"

    ls -l $VENV/bin
    $VENV/bin/pip install -r $BUILD_DIR/requirements.txt | indent
fi

echo "-----> Building runtime environment"
mkdir -p $BUILD_DIR/.profile.d
echo "export PATH=\"\$HOME/venv/bin::\$PATH\"" > $BUILD_DIR/.profile.d/venv.sh
