#!/usr/bin/env bash
# -*- sh -*-

# Fail fast and fail hard.
set -eo pipefail

# Paths.
BIN_DIR=$(cd $(dirname $0); pwd) # absolute path
ROOT_DIR=$(dirname $BIN_DIR)
BUILD_DIR=$1
CACHE_DIR=$2

source $BIN_DIR/utils

# ActivePython isn't installed yet.
puts-step "Downloading and installing ActivePython 2.7.5.6"
APY_URL="https://dl.dropboxusercontent.com/u/87045/tmp/ActivePython-2.7.5.6-linux-x86_64.tar.gz"
mkdir -p $CACHE_DIR
cd $CACHE_DIR
wget -q -c $APY_URL
rm -rf x
mkdir x 
cd x
tar zxf ../A*gz
cd Acti*
./install.sh -I $BUILD_DIR/opt/ActivePython-2.7 | indent

APYBIN=$BUILD_DIR/opt/ActivePython-2.7/bin
VENV=$BUILD_DIR/venv

export PATH=$APYBIN:$PATH

puts-step "Creating virtualenv"
virtualenv $VENV | indent

if [ -f $BUILD_DIR/requirements.txt ]; then
    puts-step "Installing requirements via pip"

    # virtualenv requires pip and setuptools tarballs, which the
    # ActivePython distribute does not include.
    mkdir -p $CACHE_DIR/pip-support
    cd $CACHE_DIR/pip-support
    wget -q -c https://pypi.python.org/packages/source/p/pip/pip-1.4.1.tar.gz#md5=6afbb46aeb48abac658d4df742bff714
    wget -q -c https://pypi.python.org/packages/source/s/setuptools/setuptools-1.1.tar.gz#md5=84062633c3818c912af76d54a40d11a7
    cd -
    
    ls -l $VENV/bin
    $VENV/bin/pip --extra-search-dir=$CACHE_DIR/pip-support install -r $BUILD_DIR/requirements.txt | indent
fi

ls -lR $BUILD_DIR
